<div class="container">
  <div class="back-site">
    <a href={{returnToSiteUrl}}>Return to site</a>
  </div>

  <header class="container">
    {{#link-to 'index'}}<img src={{logoUrl}} class="logo">{{/link-to}}
    <h1>{{#link-to 'index'}}Upgrade{{/link-to}}</h1>
  </header>

  <div class="container">

    {{#if showBanner}}
      <div id="banner">
        <div id="banner-content">
          <div class="close" {{action "dismiss"}}><i class="fa fa-times" title="Dismiss this banner."></i></div>
          {{#each banner as |row|}}
            <p>{{{row}}}</p>
          {{/each}}
        </div>
      </div>
    {{/if}}

    <ul class="nav nav-tabs">
      {{#link-to "index" tagName="li" class="nav-item"}}
        {{#link-to "index" class="nav-link"}}Versions{{/link-to}}
      {{/link-to}}
      {{#link-to "processes" tagName="li" class="nav-item"}}
        {{#link-to "processes" class="nav-link"}}Processes{{/link-to}}
      {{/link-to}}

      <li class="nav-item"><a class="nav-link" href={{backupsUrl}}>Backups</a></li>
    </ul>

    {{outlet}}
  </div>
</div>
